{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
    </style>
{% endblock %}

{% block title %}Accueil{% endblock %}

{% block content %}
    <div class="album">
        <div class="container-fluid mt-2 p-5">
            <div class="row mb-5 p-5">
                {% for video in videos %}
                    <div class="col-3">
                        <div class="card border-0">
                            <a href="{{ video.url }}" class="text-dark text-decoration-none">
                                <img src="{{ video.thumbnail }}" class="card-img-top rounded-5" alt="Video thumbnail">
                                <div class="card-body p-4 border-bottom rounded-bottom-5 border-start border-end">
                                    <p class="card-text fw-bold">{{ video.title }}</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <p class="small text-secondary">
                                            {{ video.description }}
                                        </p>
                                        <p class="text-body-secondary small">{{ video.timeCode }} min</p>
                                    </div>
                                </div>
                            </a>
                            <form class="text-center mt-3" method="post" action="{{ path('app_video_delete', {'id': video.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ video.id) }}">
                                <button class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
