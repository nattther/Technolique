{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
    </style>
{% endblock %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="album py-5 bg-body-tertiary">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <div class="col-md-5 col-lg-4 order-md-last">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-primary">Votre message</span>
                        <span class="badge bg-primary rounded-pill"></span>
                    </h4>
                    <ul class="list-group mb-3">
                        <li class="list-group-item d-flex justify-content-between lh-sm">
                            <div>

                        <textarea name="message" rows="20" cols="50">
Votre message ici.

</textarea>
                    </ul>
                </div>
                <div class="col-md-7 col-lg-8">
                    <h4 class="mb-3">Formulaire de contact</h4>
                    <form class="needs-validation" novalidate>
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <label for="Nom" class="form-label">Nom</label>
                                <input type="text" class="form-control" id="Nom" placeholder="" value="" required>
                                <div class="invalid-feedback">
                                    Valid Nom is required.
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <label for="Prénom" class="form-label">Prénom</label>
                                <input type="text" class="form-control" id="Prénom" placeholder="" value="" required>
                                <div class="invalid-feedback">
                                    Valid Prenom is required.
                                </div>
                            </div>

                            <div class="col-12">
                                <label for="Email" class="form-label">Email</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text">@</span>
                                    <input type="text" class="form-control" id="Email" placeholder="Email" required>
                                    <div class="invalid-feedback">
                                        Your Email is required.
                                    </div>
                                </div>
                            </div>

                            <div class="col-12">
                                <label for="adresse" class="form-label">Adresse</label>
                                <input type="text" class="form-control" id="adresse" placeholder="12 Rue de la mairie,..." required>
                                <div class="invalid-feedback">
                                    Please enter your addresse.
                                </div>
                            </div>

                            <div class="col-12">
                                <label for="addresse2" class="form-label">Adresse Suite <span class="text-body-secondary">(Optionnel)</span></label>
                                <input type="text" class="form-control" id="addresse" placeholder="Appartement N°, Etage,...">
                            </div>

                            <div class="col-md-3">
                                <label for="code_postal" class="form-label">Code Postal</label>
                                <input type="text" class="form-control" id="code_postal" placeholder="" required>
                                <div class="invalid-feedback">
                                    Zip code required.
                                </div>
                            </div>

                            <div class="col-md-4">
                                <label for="Ville" class="form-label">Ville</label>
                                <input type="text" class="form-control" id="Ville" placeholder="" required>
                                <div class="invalid-feedback">
                                    Ville required.
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label for="Téléphone" class="form-label">Téléphone</label>
                                <input type="text" class="form-control" id="Téléphone" placeholder="" required>
                                <div class="invalid-feedback">
                                    Téléphone required.
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="save-info">
                            <label class="form-check-label" for="save-info">Sauvegarder les informations pour la prochaine fois</label>
                        </div>

                        <button class="w-100 btn btn-primary btn-lg" type="submit">Envoyer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
